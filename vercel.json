{
  "version": 2,
  "builds": [
    {
      "src": "api/simple_chat.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/chat",
      "dest": "/api/simple_chat.py"
    },
    {
      "src": "/api/webhook",
      "dest": "/api/simple_chat.py"
    },
    {
      "src": "/(.*)",
      "dest": "/api/simple_chat.py"
    }
  ],

  "env": {
    "OPENAI_MODEL": "gpt-3.5-turbo",
    "OPENAI_TEMPERATURE": "0.7"
  }
} 